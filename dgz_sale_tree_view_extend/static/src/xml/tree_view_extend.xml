<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
   <t t-name="list_tree_sale_tree_preview.AllHeadListRender" owl="1"
      t-inherit="web.ListRenderer" t-inherit-mode="extension">
      <xpath expr="//div/table/thead/tr/th[@t-if='hasSelectors']" position="before">
         <t t-if="props.list.resModel === 'sale.order'">
            <th></th>
         </t>
      </xpath>
   </t>
    <t t-name="list_tree_sale_tree_preview.RowListView"
       t-inherit="web.ListRenderer.RecordRow"
       t-inherit-mode="extension" owl="1">
      <xpath expr="//tr/td[hasclass('o_list_record_selector')]" position="before">
         <t t-if="record.resModel === 'sale.order' and hasSelectors">
<td>
    <i class="fa fa-file-pdf-o preview-toggle"
       style="cursor: pointer;"
       t-att-data-id="record.resId"
       t-on-click="(ev) => this.sale_tree_preview(ev,record)"></i>
</td>
         </t>
      </xpath>
   </t>
</templates>